<div class="mb-4">
  <h1><%= @country.name %></h1>
  <div class="card mb-4">
    <div class="card-body">
      <p><strong>Continent:</strong> <%= @country.continent %></p>
      <p><strong>Currency:</strong> <%= @country.currency %></p>
      <p><strong>Language:</strong> <%= @country.language %></p>
      <p><strong>Number of Cities:</strong> <%= @country.cities.count %></p>
    </div>
  </div>
  
  <h2>Cities in <%= @country.name %></h2>
  
  <% if @cities.any? %>
    <div class="row">
      <% @cities.each do |city| %>
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= city.name %>
                <% if city.is_capital %>
                  <span class="badge bg-success">Capital</span>
                <% end %>
              </h5>
              <p class="card-text">
                <strong>Population:</strong> <%= number_with_delimiter(city.population) %><br>
                <strong>Attractions:</strong> <%= city.attractions.count %>
              </p>
              <%= link_to "Explore City", city_path(city), class: "btn btn-sm btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @cities %>
    </div>
  <% else %>
    <p>No cities found for this country.</p>
  <% end %>
  
  <%= link_to "Back to Countries", countries_path, class: "btn btn-secondary mt-3" %>
</div>